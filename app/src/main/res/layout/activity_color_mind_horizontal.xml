<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="24dp"
    tools:context=".ColorMindActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_color1_R"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:text="R"
                android:textStyle="bold" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_color1R"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:contentDescription="color 1 R"
                android:stepSize="1"
                android:value="0"
                android:valueFrom="0"
                android:valueTo="255" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_weight="0.5"
                android:text="Current RGB Selection" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_color1_G"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:text="G"
                android:textStyle="bold" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_color1G"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:contentDescription="color 1 R"
                android:stepSize="1"
                android:value="0"
                android:valueFrom="0"
                android:valueTo="255" />
            <TextView
                android:id="@+id/tv_color1_RGB"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text="[255, 255, 255]" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_color1_B"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:text="G"
                android:textStyle="bold" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_color1B"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:contentDescription="color 1 R"
                android:stepSize="1"
                android:value="0"
                android:valueFrom="0"
                android:valueTo="255" />
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:paddingLeft="24dp"
                android:text="Generate"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_row6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_palette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palette"
                android:textSize="20dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_row7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_palette_color_1"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:text="color 1" />

            <TextView
                android:id="@+id/tv_palette_color_2"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:text="color 2" />

            <TextView
                android:id="@+id/tv_palette_color_3"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="color 3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_row8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_palette_color_4"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                android:text="color 4" />

            <TextView
                android:id="@+id/tv_palette_color_5"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="color 5" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>