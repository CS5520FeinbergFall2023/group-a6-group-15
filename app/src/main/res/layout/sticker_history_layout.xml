<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">


<ImageView
    android:id="@+id/emoji_history"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_alignParentStart="true"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    app:srcCompat="@drawable/happy_emoji" />

    <TextView
        android:id="@+id/sticker_sent_by_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@id/sticker_received_time_tv"
        android:layout_toEndOf="@id/emoji_history"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#0FA6EC"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sticker_received_time_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#0FA6EC"
        android:textSize="20sp" />


</RelativeLayout>